generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Bookings {
  id        Int      @id @default(autoincrement())
  roomId    Int
  resortId  Int      
  startDate DateTime
  endDate   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  room      Rooms    @relation(fields: [roomId], references: [id])
  resort    Resorts  @relation(fields: [resortId], references: [id])
  @@index([roomId], map: "Booking_roomId_fkey")
  @@index([resortId], map: "Bookings_resortId_fkey") 
}

model Resorts {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  location    String
  region      String
  rooms       Rooms[]   
  users       Users[]
  bookings    Bookings[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Rooms {
  id        Int      @id @default(autoincrement())
  name      String
  type      String
  capacity  Int
  price     Float
  resortId  Int
  bookings  Bookings[]  
  resort    Resorts @relation(fields: [resortId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([resortId], map: "Rooms_resortId_fkey")
}

model Users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  resortId  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  resort    Resorts @relation(fields: [resortId], references: [id])
  @@index([resortId], map: "Users_resortId_fkey")
}
